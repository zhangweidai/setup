#!/bin/awk -f 
# used in vi filename:linenum:  to vi to filename at location linenum
# handy when used with grep -rHsn
{
   n = split ($1, array, ":");
   if (n < 2)
   {
      printf ("%s +%d ", array[1], array[2]);
   }
   else
   {
      printf ("%s +%d ", array[1], array[2]);
   }
}
