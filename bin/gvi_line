#!/bin/awk -f 
# used in vi filename:linenum:  to vi to filename at location linenum
# handy when used with grep -rHsn
{
   n = split ($1, array, ":");
   if (n < 2)
   {
#       x = split ($1, array, "-");
#       if (x < 2)
#          printf ("gvim %s ", array[1]);
#       else
         printf ("gvim %s +%d ", array[1], array[2]);
   }
   else
   {
      printf ("gvim %s +%d ", array[1], array[2]);
   }
}
